<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", "/", class: 'navbar-brand' %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse show" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li><a class="nav-link text-light" href="/users/:id"><i class="fas fa-home"></i>Home</a></li>
              <% else %>
              <li><a class="nav-link text-light" href="/"><i class="fas fa-home"></i>Home</a></li>
              <% end %>
              <% if user_signed_in? %>
              <li><a class="nav-link text-light" href="/users"><i class="fas fa-users"></i>User</a></li>
              <% else %>
              <li><a class="nav-link text-light" href="/about"><i class="fas fa-link"></i>About</a></li>
              <% end %>
              <!--<%= link_to "Users", users_path %>-->
              <% if user_signed_in? %>
                <li><a class="nav-link text-light" href="/books"><i class="fas fa-book-open"></i>Book</a></li>
                <li><a class="nav-link text-light" href="/users/sign_out" data-method="delete"><i class="fas fa-sign-out-alt"></i>Log out</a></li>
                <li><a class="nav-link text-light"><%= link_to "",  destroy_user_session_path, method: :delete %></a></li>
              <% else %>
                <li><a class="nav-link text-light" href="/users/sign_up"><i class="fas fa-sign-in-alt"></i>Sign up</a></li>
                <li><a class="nav-link text-light" href="/users/sign_in"><i class="fas fa-user-plus"></i>Log in</a></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
    <%= yield %>
    </main>
  </body>
  <footer>
    <div class='container mt-5'>
    	<div class='row'>
      	<div class='mx-auto'>
      		<p>CopyRight Infratop.inc</p>
      	</div>
      </div>
    </div>
  </footer>
</html>
