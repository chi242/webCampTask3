  <div class="col-md-3">
    <h2>User info</h2>
    <table>
      <tbody>
        <tr>
      	  <th>name</th>
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to 'edit', edit_user_path(@user.id) %>
    </div>
    <h2 class="mt-3">New book</h2>
    <%= form_with model: @book, url: '/books', local: true, method: :post do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :opinion %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class: 'btn btn-success' %>
      </div>
    <% end %>
    </div>