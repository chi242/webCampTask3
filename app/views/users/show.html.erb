<div class="container px-5 px-sm-0">
  <div class="row">
  <%= render 'userinfo', post_users: @homes %>
  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
         <% @books.each do |book| %>
         <tr>
            <td><%= user.image %></td>
            <% if @user === current_user.id %>
            <td><%= link_to book.title, "/books/#{book.id}" %></td>
            <% end %>
            <td><%= book.opinion %></td>
         </tr>
        <% end %>
      </tbody>
    </table>
</div>
  </div>
</div>
