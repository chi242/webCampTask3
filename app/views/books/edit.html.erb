<h1>books/edit</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, url: book_path(@book.id),class: 'edit_book', method: :patch do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <label for="book_title">Opinion</label>
        <%= f.text_area :opinion %>
      </div>
    </div>
  </div>
</div>